<div id="back-header-img">
	<h1><%= @cowork.name %></h1>	
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div id="back-to-search">
				<a href="/coworks" class="back-link hideBack"> < Back to Search</a>
				<% if user_signed_in? %>
				<a href="/" class="back-link"> < Back to Search</a>
					<script type="text/javascript">
					$('.hideBack').toggle();
					</script>
				<% end %>	
			</div>

			<div id="cowork-characteristics"><%= @cowork.characteristics.html_safe %></div>

			<div id="cowork-logo">
				<img src="/assets/coworking_circle2.jpg">
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">	
			<div class="info-box">
				<div>
					<strong>Details: </strong>
				</div>
					
				<div>
					<%= @cowork.description.html_safe %>
				</div>
			</div>	
		</div>

		<div class="col-md-6">
			<div class="info-box">
				<div>
					<strong>Gallery: </strong>
					<div id="gallery">
						
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-md-6">
			<div class="info-box">
				<div>
					<strong>Services: </strong>
				</div>
				<div><%= @cowork.services.html_safe %></div>
			</div>
		</div>

		<div class="col-md-6">
			<div class="info-box">
				<div>
					<strong>Companies: </strong>
				</div>	
				<div><%= @cowork.companies.html_safe %></div>
			</div>		
		</div>
	</div>

	
  <% if user_signed_in? %>
    	<div class="row">
		<div class="col-md-12">
			<div class="workers">
				<h1>People that work in <%= @cowork.name %></h1>
			</div>

			<div id="filter-errors">
				
			</div>

			<div class="filter-form">
				<form action="/users-data" id="filter-form-tag">	
					<input type="text" placeholder="Name:" name="Name" class="filter-input" id="name-filter-input" required></input>
		  				<select name="Job" id="select-tag" required>
			  				<% @jobs.each do |job| %>
							    <option> <%= job %> </option>
							<% end %>
						</select>
				<button type="submit" class="btn btn-success" id="filter-search">Search!</button>		
				</form>		
			</div>

		</div>
	</div>

	  <!-- Modal -->
	<div class="modal fade js-modal" id="myModal">
	  <div class="modal-dialog">
	    <div class="modal-content">

	      <div class="modal-header">
	        <!-- Close button -->
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span>&times;</span>
	        </button>
			<div id="modal-info">
	        	<h2 id="worker-info"></h2>
	        
	        	<p id="worker-job"></p>
	        	<p id="worker-email"></p>
	        </div>
	        	
	      </div>

	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

	<div class="row">
		<div class="col-md-12">
			<div class="filter-results">
				
			</div>
			<div class="filter-results-2">
				
			</div>			
		</div>
	</div>
  <% else %>
  
  <% end %>



	
